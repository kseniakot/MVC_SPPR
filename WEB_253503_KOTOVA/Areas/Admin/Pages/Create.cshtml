@page
@model WEB_253503_KOTOVA.UI.Areas.Admin.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Dish</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Вывод всех ошибок -->

            <div class="form-group">
                <label asp-for="Dish.Name" class="control-label"></label>
                <input asp-for="Dish.Name" class="form-control" />
                <span asp-validation-for="Dish.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dish.Description" class="control-label"></label>
                <input asp-for="Dish.Description" class="form-control" />
                <span asp-validation-for="Dish.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dish.CategoryId" class="control-label">Category</label>
                <select asp-for="Dish.CategoryId" class="form-control" asp-items="Model.Categories"></select>
                <span asp-validation-for="Dish.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dish.Calories" class="control-label"></label>
                <input asp-for="Dish.Calories" class="form-control" />
                <span asp-validation-for="Dish.Calories" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Upload" class="control-label">Image</label>
                <input asp-for="Upload" type="file" class="form-control" />
                <span asp-validation-for="Upload" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
